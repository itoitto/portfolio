<%= stylesheet_link_tag 'community', :media => "all" %>
<div class="header_line">
  <ul class="ul_nav_community_index">
    <div class="list_group">
      <% if !user_signed_in? %>
        <li class="list_community_nav">
          <%=link_to("ログイン","/users/sign_in", :style=>"color:#707070;")%>
        </li>
      <%end%>
      <% if user_signed_in? %>
        <li class="list_nav_margin">
        </li>
        <li class="list_community_nav">
          <div class="community_header">
            <%=link_to("コミュニティ新規作成","/community/new", :style=>"color:#707070;")%>
          </div>
        </li>
        <li class="list_community_nav">
          <div class="community_header">
            <%= form_tag(community_index_path,:method => 'get') do %>
              <%= text_field_tag :search , '', class: 'search_text_field'%>
              <%= submit_tag '検索', :name => nil, :style=>"font-size:15px; height:25px; background:#F8F8F8;"%>
            <% end %>
          </div>
        </li>
      <%end%>
    </div>
  </ul>
</div>
