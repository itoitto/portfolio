<!DOCTYPE html>
<html>
  <head>
    <title>SalogApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="header_line">
      <ul class="ul_nav_ver_community">
        <div class="list_group">
          <div class="site_title">
            <%= "FutsaLog"%>
          </div>
          <% if !user_signed_in? %>
            <li class="list_nav">
              <%=link_to("ログイン","/users/sign_in", :style=>"color:#707070;")%>
            </li>
          <%end%>
          <% if user_signed_in? %>
          <li class="list_nav">
            <%=link_to("練習一覧","/posts/index", :style=>"color:#707070;")%>
            </li>
            <li class="list_nav">
              <%=link_to("練習記録","/posts/new", :style=>"color:#707070;")%>
            </li>
            <li class="list_nav">
              <%=link_to("コミュニティ一覧","/community/index", :style=>"color:#707070;")%>
            </li>
            <% if current_user.try(:admin?) %>
              <li class="list_nav">
                <%=link_to("管理者機能","/admin", :style=>"color:#707070;")%>
              </li>
            <%end%>
            <li class="list_nav">
              <%=link_to("ログアウト","/users/sign_out", :style=>"color:#707070;")%>
            </li>
            <div class="user_name">
              <li class="list_nav">
                <%= "ユーザー名：#{@user.username}"%>
              </li>
            </div>
          <%end%>
        </div>
      </ul>
    </div>
    <!--%= devise_error_messages %-->
    <% if flash[:notice]%>
      <p class="flash"><%= notice %></p>
      <p class="field"><%= alert %></p>
    <%end%>
    <%= yield %>
    <footer class="footer_deco">
        <%="©️salog 201903"%>
    </footer>
  </body>
</html>
