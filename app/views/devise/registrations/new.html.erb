<%= stylesheet_link_tag 'devise', :media => "all" %>
<h1 class="title">新規登録</h2>

<div class="container_oya">
  <div class="container">
    <div class="login_outside">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <div class="email_label">
            <%= f.label :email %><br />
          </div>
          <div class="email_input_outside">
            <div class="email_input_inner">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="password_label">
            <%= "パスワード" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 桁以上)</em>
            <% end %><br />
          </div>
          <div class="password_input_outside">
            <div class="password_input_inner">
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="field">
          <div class="password_label">
            <%= f.label :password_confirmation %><br />
          </div>
          <div class="password_input_outside">
            <div class="password_input_inner">
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "登録" , class:'login_button'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
